extends layout

block content
        h2 #{title}

        #login.center-vertical
                form.well(id='form-login', action='/addevent', method='post')
                        .form-group
                                input.form-control(type='text', id='user-tf', name='event', placeholder='Event name...')
                        .form-group
                                input.form-control(type='text', id='pass-tf', name='message', placeholder='Message...')
                        .controls
                                button(type='submit').btn.btn-primary.button-sign-in
                                        span.glyphicon.glyphicon-lock
                                        | Create
